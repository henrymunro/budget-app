{
  "name": "budget-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.5",
    "immutable": "^3.8.2",
    "lodash": "^4.17.4",
    "normalize.css": "^7.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-file-reader": "^1.1.3",
    "react-scripts": "1.0.17",
    "redux": "^3.7.2",
    "redux-immutable": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "uuid": "^3.1.0"
  },
  "lint-staged": {
    "*.{js,json,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "npm-run-all -p watch-css start-js",
    "test": "npm-run-all -p watch-css test-js",
    "test:ci": "npm run build-css && CI=true react-scripts test --ci --verbose --silent --env=jsdom",
    "storybook": "start-storybook -p 9009 -s public",
    "flow": "flow",
    "build": "REACT_APP_VERSION=$npm_package_version REACT_APP_NAME=$npm_package_name npm run build-css && react-scripts build",
    "precommit": "lint-staged",
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "REACT_APP_VERSION=$npm_package_version REACT_APP_NAME=$npm_package_name react-scripts start",
    "test-js": "REACT_APP_VERSION=$npm_package_version REACT_APP_NAME=$npm_package_name react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "storybook-js": "export NODE_PATH=src/ && start-storybook -p 6006",
    "build-storybook": "build-storybook -s public",
    "scratchpad": "NODE_PATH=src/ babel-node --presets=env,flow ./src/scratchpad.js"
  },
  "devDependencies": {
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "build-css": "^0.2.0",
    "git-pre-commit": "^2.1.3",
    "flow-bin": "^0.53.1",
    "lint-staged": "^4.2.3",
    "npm-run-all": "^4.1.1",
    "node-sass-chokidar": "0.0.3",
    "prettier": "^1.9.2",
    "storybook-router": "^0.3.2",
    "@storybook/react": "^3.3.1",
    "@storybook/addon-actions": "^3.3.1",
    "@storybook/addon-links": "^3.3.1"
  }
}
